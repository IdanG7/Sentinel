{
  "dashboard": {
    "title": "Sentinel - SRE Overview",
    "tags": ["sentinel", "sre", "overview"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "type": "graph",
        "title": "API Request Rate",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{service}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "requests/sec", "show": true },
          { "show": true }
        ],
        "legend": { "show": true },
        "nullPointMode": "null"
      },
      {
        "id": 2,
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "type": "graph",
        "title": "Request Latency (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "label": "seconds", "show": true },
          { "show": true }
        ]
      },
      {
        "id": 3,
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 8 },
        "type": "stat",
        "title": "Services Up",
        "targets": [
          {
            "expr": "count(up{job=~\"sentinel-.*\"} == 1)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 4,
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 8 },
        "type": "stat",
        "title": "Policy Violations (5m)",
        "targets": [
          {
            "expr": "sum(increase(sentinel_policy_violations_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 5,
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 8 },
        "type": "stat",
        "title": "Action Plans (5m)",
        "targets": [
          {
            "expr": "sum(increase(sentinel_action_plans_total[5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "gridPos": { "h": 6, "w": 6, "x": 18, "y": 8 },
        "type": "stat",
        "title": "Reconciliations (5m)",
        "targets": [
          {
            "expr": "sum(increase(sentinel_controller_reconciliations_total{result=\"success\"}[5m]))",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
        "type": "table",
        "title": "Service Health",
        "targets": [
          {
            "expr": "up{job=~\"sentinel-.*\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "__name__": true, "Time": true },
              "indexByName": {},
              "renameByName": {
                "job": "Service",
                "instance": "Instance",
                "Value": "Status"
              }
            }
          }
        ]
      }
    ],
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "uid": "sentinel-overview",
    "editable": true
  }
}
