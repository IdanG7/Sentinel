# EditorConfig for Sentinel
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.proto]
indent_size = 2

[go.mod,go.sum]
indent_style = tab
